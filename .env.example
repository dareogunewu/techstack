# Application
NODE_ENV=development
PORT=3000
LOG_LEVEL=debug

# Database
DATABASE_URL=postgresql://tenantguard:dev_password_change_in_production@localhost:5432/tenantguard
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis
REDIS_URL=redis://:dev_redis_password@localhost:6379
REDIS_PREFIX=tenantguard:

# Security
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=your_32_byte_encryption_key_here
JWT_ISSUER=https://auth.example.com

# Session
SESSION_SECRET=your_session_secret_here
SESSION_TTL=1800

# OAuth 2.0
ACCESS_TOKEN_TTL=900
REFRESH_TOKEN_TTL=2592000
AUTHORIZATION_CODE_TTL=600

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3001,http://localhost:3002
CORS_CREDENTIALS=true

# Email (for notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@example.com
SMTP_PASSWORD=your_smtp_password
SMTP_FROM=TenantGuard <noreply@example.com>

# Monitoring (optional)
SENTRY_DSN=
METRICS_ENABLED=true

# Feature Flags
ENABLE_SAML=true
ENABLE_SCIM=true
ENABLE_LDAP=true
ENABLE_DEVICE_FLOW=true
ENABLE_PAR=true
